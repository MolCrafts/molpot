{
    "name": "MolCrafts - CPU",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/molcrafts/features/utils:latest": {},
        "ghcr.io/molcrafts/features/miniforge": {},
        "ghcr.io/molcrafts/features/molpot": {
            "enableCuda": false
        }
    },
    "customizations": {
